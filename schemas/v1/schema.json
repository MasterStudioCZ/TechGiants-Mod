{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Generated schema for Root",
    "type": "object",
    "properties": {

        "manifestVersion": {
            "type": "string",
            "const": "1"
        },
        "uuid": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string"
        },
        "category": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["language"]
            }
        },
        "description": {
            "type": "string"
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["homepage", "website"]
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": ["type", "url"]
            }
        },
        "author": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "contacts": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "format": "email"
                                },
                                {
                                    "format": "uri"
                                }
                            ]
                        }
                    }
                },
                "required": ["name", "contacts"]
            }
        },
        "version": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        },
        "changelog": {
            "type": "string"
        },
        "assets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "const": "json"
                    },
                    "path": {
                        "type": "string",
                        "format": "uri-reference"
                    }
                },
                "required": ["type", "path"]
            }
        },
        "supportedGameVersion": {
            "type": "string",
            "enum": ["0.2.0-beta.5", "0.2.0-beta.6", "0.2.0-beta.7"],
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "license": {
            "type": "string",
            "format": "uri-reference"
        },
        "icon": {
            "type": "string",
            "format": "uri-reference"
        }
    },
    "required": [
        "manifestVersion",
        "uuid",
        "name",
        "category",
        "description",
        "links",
        "author",
        "version",
        "changelog",
        "assets",
        "supportedGameVersion",
        "createdAt",
        "license",
        "icon"
    ]
}
